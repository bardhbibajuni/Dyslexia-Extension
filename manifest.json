{
    "manifest_version": 3,
    "name": "Dyslexia Extension",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/OpenDyslexic-Regular.otf",
                "fonts/Lexend-Regular.ttf"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
